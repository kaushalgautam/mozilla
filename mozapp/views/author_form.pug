extends layout

block content
    h1 #{title}

    form(method='POST', action='')
        div(class='form-group')
            label(for='first_name') First Name:
            input#first_name.form-control(type='text', placeholder='George, William, etc.', required='true', name='first_name' value=(undefined===author ? '': author.first_name))
            label(for='family_name') Family Name:
            input#family_name.form-control(type='text', placeholder='Orwell, Shakespeare, etc', required='true', name='family_name' value=(undefined===author ? '': author.family_name))
        div(class='form-group')
            label(for='date_of_birth') Date of Birth:
            input#date_of_birth.form-control(type='date', name='date_of_birth', value=(undefined===author ? '': author.date_of_birth))
            label(for='date_of_death') Date of Death:
            input#date_of_death.form-control(type='date', name='date_of_death', value=(undefined===author ? '': author.date_of_death))
        button(type='submit') Submit    
    if errors
        ul
            for error in errors
                li!=error.msg